<script>
  function trim(str, is_global) {
    var result;
    result = str.replace(/(^\s+)|(\s+$)/g, "");
    if (is_global.toLowerCase() == "g") {
      result = result.replace(/\s/g, "");
    }
    return result;
  }
  var word_count = trim($('.article-entry').text(), "g").length - 14

  var read_time = Math.round(word_count / 400);
  read_time > 1 ? read_time : read_time = 1
  if (read_time > 1) {
    console.log('预计阅读时长：' + read_time + '分钟');
  } else {
    console.log('预计阅读时长：1分钟');
  }
  $('.word-count').text("文章字数：" + word_count)
  $('.word-time').text("阅读时长：" + read_time + "分")
</script>